@{
}
@model RegisterViewModel

<form class="text-center" asp-controller="CoffeeShop" asp-action="RegistrationConformation">
    <label asp-for="@Model.Email">Email Address</label>
    <input asp-for="@Model.Email" />
    <br />
    <label asp-for="@Model.UserName">User Name</label>
    <input asp-for="@Model.UserName"/>
    <br />
    <label asp-for="@Model.Password">Password</label>
    <input type="password" asp-for="@Model.Password" />
    <br />
    <label>Favorite Drink</label>
    <select asp-for="FavoriteDrink" class="form-control" asp-items="Html.GetEnumSelectList<DrinkType>()">
        <option>Favorite Drink:</option>
    </select>
    <button type ="submit">Register</button>
</form>
